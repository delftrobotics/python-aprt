import os
from alpm import Version

packages = {}

files = list(filter(lambda x: x.endswith('.pkg.tar.xz'), os.listdir(os.sys.argv[1])))

for file in files:
	pkgname, pkgver, pkgrel, arch = file[:-11].rsplit('-', 3)
	version = Version.parse('{}-{}'.format(pkgver, pkgrel))

	if (pkgname, arch) not in packages: packages[(pkgname, arch)] = []
	packages[(pkgname, arch)].append((version, file))


for key, data in packages.items():
	pkgname, arch = key
	data.sort()
	data.pop()
	for version, file in data:
		print(file)
